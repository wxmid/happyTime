/**index.wxss**/
.top-swiper {
  height: 240rpx;
}
.top-swiper swiper-item {
  height: 100%;
  position: relative;
}
.top-swiper swiper-item image {
  height: 100%;
  width: 100%;
}
.swiper-title {
  display: inline-block;
  width: 100%;
  color: #fff;
  font-size:28rpx;
  position: absolute;
  bottom: 20rpx;  
  left: 0rpx;
  text-indent: 40rpx;
}
.publish {
  margin-top: 14rpx;
  background: #fff;
  padding: 10rpx 20rpx;
}
.publisher-info {
  background: #fff;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}
.publisher-head {
  display: inline-block;
  height: 100%;
  padding: 10rpx 0;  
  padding-right: 20rpx;
  box-sizing: border-box;
}
.publisher-head image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.base-info {
  display: inline-block;
  height: 100%;
  width: calc(100% - 200rpx);
  padding: 10rpx 0;
  box-sizing: border-box;
}
.base-info text {
  display: inline-block;
  width:100%;
  line-height: 40rpx;
  float: left;
}
.nickName {
  font-size: 30rpx;
  color: #ff6c00;
}
.publish-time {
  color: #4CAF50;  
  font-size: 24rpx;
}
.original {
  width: 80rpx;
  height: 100%;
  text-align: center;
}
.original image {
  width: 50rpx;
  height: 50rpx;
}
.original text {
  display: inline-block;
  width: 100%;
  font-size: 18rpx;
  float:left;
}
.main-part {
  width: 100%;
}
.abstract {
  font-size: 28rpx;
  color: #636363;
  line-height: 42rpx;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis; 
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  margin-bottom: 20rpx;
}
.thumbnail {
  display: -webkit-flex;    
  display: flex;  
  flex-direction: row;  
  flex-wrap:wrap;
  height: auto; 
  /* max-height: 500rpx;  */
  overflow: hidden;
}
.thumbnail image {
   /* width: 33.333%;  */
  /* min-width: 33.333%; */
  /* max-width: 100%; */
  display: inline-flex; 
  height: 280rpx; 
}