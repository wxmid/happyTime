/* pages/my/my.wxss */
.my-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
  background-image:url(http://img2.imgtn.bdimg.com/it/u=1186420197,1769569887&fm=214&gp=0.jpg);  
} 
.userinfo {
  width: 100%;
  text-align: center;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border:#037345;  
  border-style: solid;
  border-width: 2rpx;
}
.userinfo-nickname {
  display: inline-block;
  width: 100%;
  margin-top:20rpx;
  color: #fff;
}
.my-topbar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.item-bar {
  flex:33.3333%;
   text-align: center;
}